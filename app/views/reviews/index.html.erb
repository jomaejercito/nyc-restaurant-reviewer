<% if @user == current_user %>
  <h1>My Restaurant Reviews</h1><br>
<% else %>
  <h1><%= @user.name %>'s Restaurant Reviews</h1><br>
<% end %>

<br>

<% @reviews.each do |review| %>
  <p class="lead"><%= link_to review.restaurant.name, user_review_path(@user, review) %> </p>
<% end %>

<br><br>

<% if @user == current_user %>
  <button type="button" class="btn btn-outline-secondary"><%= link_to "Add a Review", new_user_review_url(@user) %></button>
<% end %>
