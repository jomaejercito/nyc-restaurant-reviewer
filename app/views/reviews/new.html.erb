<h1>Add a Restaurant Review</h1>
<br><br>
<div class="form-group">
  <%= form_for :review, url: user_reviews_path do |f| %>
      <legend><%= f.label :restaurant, "Choose Restaurant" %></legend><br>
      <%= f.collection_select :restaurant_id, Restaurant.order('name ASC'), :id, :name, class: "form-control" %>
      <br><br><br>
      <%= render partial: 'form', locals: {f: f} %>
      <br><br><br>
      <%= f.submit "Create Review", class: "btn btn-outline-secondary" %>
  <% end %>
</div>
