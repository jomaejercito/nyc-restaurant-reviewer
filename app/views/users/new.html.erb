<h1>Create an Account</h1><br><br

  <div class="form-group row">
    <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.text_field :name, placeholder: "Username", class: "form-control" %><br>
    </div>

    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email", class: "form-control" %><br>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: "Password", class: "form-control" %><br>
    </div>

      <br>
      <%= submit_tag "Create Account", class: "btn btn-outline-secondary"%>
    <% end %>
  </div>
